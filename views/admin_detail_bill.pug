    .content1
      .bill
        .payer
          ul.bill_detail
            li#code_bill
              | M&atilde; &dstrok;&#x1A1;n h&agrave;ng: 
              br
              strong #{bill._id}
            li#bill_date
              | Ng&agrave;y: 
              br
              strong #{bill.time}
            li#bill_name
              | H&#x1ECD; v&agrave; t&ecirc;n: 
              br
              strong #{bill.name}
            li#bill_address
              | &Dstrok;&#x1ECB;a ch&#x1EC9;: 
              br
              strong #{bill.address}
            li#bill_phone
              | S&#x1ED1; &dstrok;i&#x1EC7;n tho&#x1EA1;i: 
              br
              strong #{bill.number_phone}
            li#bill_total
              | T&#x1ED5;ng c&#x1ED9;ng: 
              br
              strong(style='color:red') #{bill.total}
            li#bill_method
              | Ph&#x1B0;&#x1A1;ng th&#x1EE9;c thanh to&aacute;n:
              br
              strong Chuy&#x1EC3;n kho&#x1EA3;n ng&acirc;n h&agrave;ng
          .order_details
            table._order_details
              thead(style='background-color:whitesmoke')
                tr
                  th.product_name S&#x1EA3;n ph&#x1EA9;m
                  th.product.total T&#x1ED5;ng
              tbody
                each items in bill.list_product
                  tr.order_items
                    td.product_name
                      a(href='#', style='color:black') #{items.name}
                      strong x 1
                    td.price(style='color:red') #{items.prix}
              tfoot
                tr
                  th Giao nh&#x1EAD;n h&agrave;ng
                  td Mi&#x1EC5;n ph&iacute; giao h&agrave;ng
                tr
                  th T&#x1ED5;ng c&#x1ED9;ng:
                  td(style='color:red') #{bill.total}
                tr
                  th L&#x1B0;u &yacute;:
                  td Kh&ocirc;ng c&oacute;
    .functions
